<!DOCTYPE html>
	<head>
	</head>
	<body>
			<div id="topbar">
				<div id="groupool"><%= link_to "groupool", root_path(), :class => "groupool-link" %></div>
			</div>
			<div id ="big-container">
				<div id="title-container">
					<div id="title">LEAVE CAR</div>
					<div id="details">You can only remove yourself from the car</div>
				</div>
				<div id="form-container">
					<div id="input-container">
						<% if params[:warning] %>
							<div id="warning"> Email is either wrong or invalid. Are you sure you are <%= params[:first_name] %> <%= params[:last_name]%>?</div>
						<% end  %>
						<%= form_tag(action: :delete) do %>
						<div class="input-name-container">
							<div class="input-email-authentication">
								Email Authentication: <%= text_field_tag(:email) %> 
							</div>
  							<div class="clear"></div>
						</div>
				</div>

				<%= button_tag(:submit, :class => 'leavecar') %>
				<% end %>
				<%= link_to "Go back", trip_path(id: @trip.hashid), method: :get, :class => "goback-deleteuser"%>

			</div>
	</body>
</html>
